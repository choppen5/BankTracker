<li>
  <span class="company">
    <% unless micropost.company.nil? %>
	 	<%= link_to micropost.company.name, micropost.company %>
  <% end %>
  </span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <% if current_user?(micropost.user) %>
    <%= link_to "delete", micropost, method:  :delete,
                                     confirm: "You sure?",
                                     title:   micropost.content %>
  <% end %>
  <span class = "minuteslogged">
	<% unless micropost.minutes.nil? %>
	  <%= micropost.minutes.to_s + " minutes logged" %>
	<% end %>
  </span>	
</li>