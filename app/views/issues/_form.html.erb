<%= simple_form_for @issue, :html => { :class => "form-horizontal" } do |f| %>
  <div class="form-inputs">
    <%= f.association :company, :include_blank => false -%>
    <%= f.input :story -%>
    <%= f.input :status, :collection => Issue::STATUS, :include_blank => false -%>
    <%= f.input :feeling, :collection => Issue::FEELING, :include_blank => false -%>
  </div>

  <div class="form-actions">
    <%= f.submit :class => "btn" %>
  </div>
<% end %>
