<%- form_class ||= 'form-horizontal' -%>
<%= simple_form_for @issue, :html => { :class => form_class } do |f| %>
  <div class="form-inputs">
    <%= f.association :company, :include_blank => false, :label => "Your Mortgage Company" -%>
    <%= f.input :status, :collection => Issue::STATUS, :include_blank => false -%>
    <%= f.input :feeling, :collection => Issue::FEELING, :include_blank => false -%>
    <%= f.input :story, :label => "Your Story" -%>
  </div>

  <div class="form-actions">
    <%= f.submit :class => "btn" %>
  </div>
<% end %>
