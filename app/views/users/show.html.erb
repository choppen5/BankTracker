<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>

    <% unless (@user.issues.first.nil? or @user.issues.first.company.nil?) %>
      <h3>Company:</h3>
      <%= @user.issues.first.company.name %>
      <section>
        <p> <%= @user.issues.first.story %> </p>
      </section>
    <% else %>
      <%if current_user?(@user) %>
        <section>
          <h1>Your Mortgage Company</h1>
          <%= simple_form_for @user.issues.build, :input_html => { :class => "form-horizontal" } do |f| %>
            <div class="form-inputs">
              <%= f.association :company, :label => false, :prompt => true -%>
              <h1>Your Story*</h1>
              <%= f.input :story, placeholder: "What's your story?", :label => false %>
              <%= f.hidden_field(:user_id, :value => @user.id) %>
            </div>

            <div class="form-actions">
              <%= f.submit "Post", class: "btn btn-large btn-primary" %>
            </div>
          <% end %>
        </section>
      <% end %>
    <% end %>
  </aside>

  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
     <% if current_user?(@user) and (@user.issues.count > 0)  %>
      <div class="postform">
        <%= render 'shared/micropost_form' %>
      </div>
     <% end %>

    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
