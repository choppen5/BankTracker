<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="row-fluid">
  <div class="span6">
	<div class="hero-unit">
    <h2><b>Welcome to BankTracker!</b></h2>

    
      <p>1. Find your bank: 
	  <div class="ui-widget">
	  	<%= text_field  :company, :name %> </p>
	  </div>
	  <p>2. Track your calls and experience as a customer.</p>
	  <p>3. Share your experience, get tips from others.</p>
    
     
	   <%= link_to "Sign up now!", signup_path, 
                              class: "btn btn-large btn-primary" %>
  	 </div>
    
  </div>

  <div class= "span6">
	<div class="row-fluid">
	<h3>BankTracker User Stories</h3>
		
    <%= will_paginate @users, :page_links => false  %>
	
	 		<div class= "row-fluid">
			<% @users.each do |user| %>
				<% unless (user.issues.first.nil? or user.issues.first.company.nil?) %>
			      <div class="frontcompany"><b>Bank:</b>	
				    <%= user.issues.first.company.name %>
				  </div>	
				  
				  <div class="row-fluid">
				    <div class="frontuser">
				      <%= gravatar_for user %>
					  <%= user.name %>
					</div>					     
				  </div>	
				  <br>
				
				  <div class="frontstory"></div>
				
				  <div class="row-fluid">				
				    <div class= "span8">	
					  <b>Story:</b>
					    <%= user.issues.first.story %>			  
					</div>
			 
					<div class= "span4">	 
					  <div class="frontinteractions">
					  	 <% if user.microposts.any? %>
					       <b>Updates (<%= user.issues.first.microposts.count %>)</b>
					     <% end %>
					  </div>
					</div>											
    			  </div>	
			<% end %>
            </div>
	<% end %>
			
	
     
  </div>
 </div>
</div>	

  
<% end %>